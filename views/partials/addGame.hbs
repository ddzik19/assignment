<form class="ui stacked segment form" action="/dashboard/{{gamelist.id}}/addGame" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Name</label>
      <input type="text" name="name" autofocus required title = "Please include a valid Name"
      placeholder="Name">
    </div>
    <div class="field">
      <label>Release Date</label>
      <input type="text" name="releaseDate" required title = "Please include a valid Release Date"
      placeholder="Release Date"  >
    </div>
    <div class="field">
      <label>Genre</label>
      <input type="text" name="genre" required title = "Please include a valid Genre"
      placeholder="Genre"  >
    </div>
    <div class="field">
      <label>Rating</label>
      <input type="text" name="rating" required title = "Please include a Rating"
      placeholder="Rating"  >
    </div>
        <div class="field">
      <label>Description</label>
      <input type="text" name="desc" required title = "Please include a Description"
      placeholder="Descrption"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Game</button>
</form>